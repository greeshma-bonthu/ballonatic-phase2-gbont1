<!doctype html>
<html>
    <head>
       <meta charset="utf-8">
       <title>Registration Form</title>
       <link rel="stylesheet" href="./css/registration.css">
       <script  src="./js/button.js"></script>
    </head>
    <body>
        <div class="parent-div">
    
            
                <div class="forms">
                    
                    <form class="register-form" id="register-form" method="POST" action="/register">
                        <h2 class="heading-text">Sign Up</h2>

                        <input type="email" id="email" name="email" placeholder="Email*" required/>
                        
                        <p class="errors" id="error1"></p>

                        <input onkeyup="trigger()" type="password" id="password" name= "password" placeholder="Password*" required/>
                        
                        <p class="errors" id="error2"></p>
                        <div class="indicator"><span class="weak"></span> <span class="medium"></span> <span
                            class="strong"></span></div>
                        <div class="strength"></div>

                        <input type="password" id="cpassword" name= "cpassword" placeholder="Confirm Password*" required/>
                        
                        <p class="errors" id="error3"></p>

                        <input type="text" id="firstname" name= "firstname" placeholder="First Name*" required/>
                        
                        <p class="errors" id="error4"></p>

                        <input type="text" id="lastname" name= "lastname" placeholder="Last Name*" required/>
                        
                        <p class="errors" id="error5"></p>

                        <input type="text" id="address" name= "address" placeholder="Address" />
                        
                        <p class="errors" id="error6"></p>

                        <input type="text" id="city" name= "city" placeholder="City" />
                        
                        <p class="errors" id="error7"></p>

                        <div>
                            <select class="input" id="volume" name="state" placeholder="State">
                                <%
                                for ( var i = 0; i < state.length; i++ )
                                {
                                    %><option value="<%=state[i] %>"><%=state[i] %></option><%
                                }
                                %>
                            </select>
                           
                            
                            <p class="errors" id="error8"></p>

                        </div>
                        

                        <input type="text" id="postalcode" name= "postalcode" placeholder="Postal Code" />
                        
                        <p class="errors" id="error9"></p>

                        <input type="text" id="phone" name= "phone" placeholder="Phone" />
                    
                        <p class="errors" id="error10"></p>

                        <button type="submit"> Sign up</button>
                        <% if (locals.error) { %>
                            <div class="alert alert-danger"><%= locals.error %></div>
                        <% } %>
                        <p class="message">Already registered? <a href="/login">Login</a></p>
                        </br>
                        <a href="/" class="message">Cancel</a>
                    </form>
                </div>
            
        </div>
        
        
    </body>
</html>